    <style>
        .collapsible {
            background-color: #777;
            color: white;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
        }

            .active, .collapsible:hover {
                background-color: #555;
            }

        .content {
            padding: 0 18px;
            display: none;
            overflow: hidden;
            background-color: #f1f1f1;
        }

            .content a {
                margin-bottom:5px;
                cursor: pointer;
                margin-top: 5px;
                background-color: white;
                color: black;
                border: 1px solid;
                padding: 10px 20px;
                text-decoration: none;
                display: block;
            }
                .content a:hover {
                    background-color: #f1f1f1;
                }

    </style>

